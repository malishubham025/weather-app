<title>Document</title>
</head>
<body>
    
    <h1 class="flag"><%=flag%></h1>
    <%console.log(info)%>
    <div class="main">
        <div class="partone">
            
            <div class="date">
                <h4 class="time"><%=time%></h4>
                <h2  class="day"><%=day%> , <%=date%> <%=month%> <%=year%></h2>

        
            </div>
            <div class="city">
            <p class="p1"><%=city%></p>
            <p class="p2"><%=country%><p>
            </div>
            <div class="flash">
                
                <div class="temp">
                      <%=info.current[2]%>
                </div>
                
                <div class="des">
                    <div class="condotion">
                    <img src=" https://openweathermap.org/img/wn/<%=imgurl%>@2x.png">
                    
                    <%=info.current[3]%>
                   </div>
                   <div class="humid">
                    
                    <img  src="photos/humid2.png"  alt="">
                    <%=info.current[1]%>
                  </div>
                  <div class="speed">
                    <img src="photos/⁬diiwhh.png" alt="">
                    <%=info.current[0]%>
                  </div>
                </div>

                
            </div>
          <div class="for ">
            <div class="rotate">

            </div>
            <div class="sec">
                
            </div>
            <div class="sec third">
                
            </div>
            <div class="sec fourth">
                
            </div>
            <div class="sec fifth">
                
            </div>
            <div class="sec sixth">
                
            </div>
            <form action="/" method="post">
                <input type="text" name="city" placeholder="City Name">
                
                <button type="submit" class="btn btn-light ">Search</button>
            </form>
          </div>
        </div>
           
   
        <div class="video" >
                    <div class="week">
                        <div class="expand">
                            <div class="labels">
                                <label for="#one" class="element"></label>
                                <label for="#two" class="element"></label>
                                <label for="#three" class="element"></label>
                                <label for="#four" class="element"></label>
                            </div>
                          <div class="real" id="inner">

                           </div>
                        </div>
                        <div class="sunday">
                            <div class="day1">
                                   <div id="one">
                                    <h3><%=bDays[3]%></h3>
                                    <p><%=info.four[3]%></p>
                                   </div>
                            </div>
                            <div class="day2">
                                <div id="two">
                                    <h3><%=bDays[2]%></h3>
                                    <p><%=info.four[2]%></p>
                                </div>                                
                            </div>
                            <div class="day3">
                                <div id="three">
                                    <h3><%=bDays[1]%></h3>
                                    <p><%=info.four[1]%></p>
                                </div>                                
                            </div>
                            <div class="day4">
                                <div id="four">
                                    <h3><%=bDays[0]%></h3>
                                    <p><%=info.four[0]%></p>
                                </div>                                
                            </div>

                        </div>
                    </div>
                    
            
            <!-- <img class="one" src="photos/mountain.jpg" alt=""> -->
            <img class="two" src="photos/mountain.jpg" alt="">
            
        </div>
        
    </div>
    
    
    
   <script src="js/app.js"></script>
</body>
